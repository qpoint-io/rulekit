{
  "comments": {
    "lineComment": "--",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "/", "close": "/", "notIn": ["string", "comment"] },
    { "open": "|", "close": "|", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["'", "'"],
    ["\"", "\""],
    ["/", "/"],
    ["|", "|"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*--\\s*#region",
      "end": "^\\s*--\\s*#endregion"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_.\\-]*"
}

