{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rulekit",
  "scopeName": "source.rulekit",
  "fileTypes": [
    "rk"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#fields"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.rulekit",
          "match": "--.*$"
        },
        {
          "name": "comment.block.rulekit",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "name": "comment.block.rulekit",
              "match": "."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.logical.rulekit",
          "match": "\\b(?i:and|or|not)\\b"
        },
        {
          "name": "keyword.operator.word.rulekit",
          "match": "\\b(?i:in|contains|matches)\\b"
        },
        {
          "name": "keyword.operator.comparison.rulekit",
          "match": "\\b(?i:eq|ne|lt|le|gt|ge)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.rulekit",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.comparison.rulekit",
          "match": "==|!=|<=|>=|<|>|=~"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.language.boolean.rulekit",
          "match": "\\b(?i:true|false)\\b"
        },
        {
          "name": "constant.numeric.float.rulekit",
          "match": "[-+]?\\d*\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.rulekit",
          "match": "[-+]?\\d+\\b"
        },
        {
          "name": "constant.other.ip-cidr.rulekit",
          "match": "(?:\\d{1,3}\\.){3}\\d{1,3}/\\d{1,2}\\b"
        },
        {
          "name": "constant.other.ip.rulekit",
          "match": "(?:\\d{1,3}\\.){3}\\d{1,3}\\b"
        },
        {
          "name": "constant.other.ipv6-cidr.rulekit",
          "match": "[0-9a-fA-F:]+::[0-9a-fA-F:]*/\\d{1,3}\\b"
        },
        {
          "name": "constant.other.ipv6.rulekit",
          "match": "[0-9a-fA-F]+:[0-9a-fA-F:]+(?::[0-9a-fA-F]+)+\\b"
        },
        {
          "name": "constant.other.hex-string.rulekit",
          "match": "\\b[0-9a-fA-F]{2}(?::[0-9a-fA-F]{2})+\\b"
        },
        {
          "name": "string.regexp.forward-slash.rulekit",
          "begin": "(?<![0-9])/(?![0-9])",
          "end": "/",
          "patterns": [
            {
              "name": "constant.character.escape.rulekit",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.regexp.pipe.rulekit",
          "begin": "\\|(?![|])",
          "end": "\\|",
          "patterns": [
            {
              "name": "constant.character.escape.rulekit",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.rulekit",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rulekit",
              "match": "\\\\[ntr\"\\\\]"
            }
          ]
        },
        {
          "name": "string.quoted.single.rulekit",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.rulekit",
              "match": "\\\\[ntr'\\\\]"
            }
          ]
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.rulekit",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "fields": {
      "patterns": [
        {
          "name": "variable.other.property.rulekit",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_.\\-]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.parenthesis.rulekit",
          "match": "[()]"
        },
        {
          "name": "punctuation.bracket.rulekit",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.separator.comma.rulekit",
          "match": ","
        }
      ]
    }
  }
}